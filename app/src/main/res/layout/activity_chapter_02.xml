<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/tv_demo_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="第二章 OpenCV中的GUI特性"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_example_01"
        android:layout_width="match_parent"
        style="@style/common_textview_style"
        android:text="2.1、图像入门-图片"
        app:layout_constraintTop_toBottomOf="@id/tv_demo_title"/>
    <TextView
        android:id="@+id/btn_example_02"
        android:layout_width="match_parent"
        style="@style/common_textview_style"
        android:text="2.2、图像入门-视频"
        app:layout_constraintTop_toBottomOf="@id/btn_example_01"/>
    <TextView
        android:id="@+id/btn_example_03"
        android:layout_width="match_parent"
        style="@style/common_textview_style"
        android:text="2.3、绘图功能"
        app:layout_constraintTop_toBottomOf="@id/btn_example_02" />

    <TextView
        android:id="@+id/btn_example_04"
        android:layout_width="match_parent"
        style="@style/common_textview_style"
        android:text="2.4、手指作为画笔"
        app:layout_constraintTop_toBottomOf="@id/btn_example_03"/>
    <TextView
        android:id="@+id/btn_example_05"
        android:layout_width="match_parent"
        style="@style/common_textview_style"
        android:text="2.5、调色板"
        app:layout_constraintTop_toBottomOf="@id/btn_example_04"/>

</androidx.constraintlayout.widget.ConstraintLayout>