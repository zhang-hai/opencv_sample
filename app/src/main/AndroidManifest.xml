        <activity android:name=".ui.chapter02.ExampleActivity04"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.chapter02.ExampleActivity05"
            android:screenOrientation="portrait"/>

        <activity android:name=".ui.chapter03.Chapter03Activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.chapter03.C3_01Activity"
            android:screenOrientation="portrait"/>
